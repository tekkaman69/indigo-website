rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Autoriser lecture publique pour les images du portfolio
    match /portfolio/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Tout le reste n√©cessite authentification
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
